{
  "manifest_version": 3,
  "name": "PhishGuard Scanner",
  "version": "1.0.0",
  "description": "Scan links for phishing threats with PhishGuard",
  "action": {
    "default_title": "Scan current tab",
    "default_popup": "extension-popup.html"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["http://localhost:5000/*"],
  "icons": {
    "16": "shield.svg",
    "48": "shield.svg",
    "128": "shield.svg"
  }
}

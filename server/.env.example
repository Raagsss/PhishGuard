# Optional: MongoDB (comment out if you don't want storage)
# MONGODB_URI=mongodb://localhost:27017/phishguard

# Optional: Redis for queue (comment out if you don't want queue)
# REDIS_URL=redis://localhost:6379

# Optional: OAuth providers (comment out if you don't want login)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Session secret (only needed if using OAuth)
# SESSION_SECRET=your_random_secret_here

# Server config
PORT=5000
CLIENT_ORIGIN=http://localhost:3000
OAUTH_CALLBACK_BASE=http://localhost:5000

# Set to 'production' in production
NODE_ENV=development
